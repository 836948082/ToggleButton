<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res/com.runtai.togglebutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.runtai.togglebuttonlibrary.zcw.togglebutton.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp" />

        <com.runtai.togglebuttonlibrary.zcw.togglebutton.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.runtai.togglebuttonlibrary.zcw.togglebutton.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp"
            toggle:borderWidth="2dp"
            toggle:offBorderColor="#000"
            toggle:offColor="#ddd"
            toggle:onColor="#f00"
            toggle:spotColor="#00f" />

        <com.runtai.togglebuttonlibrary.zcw.togglebutton.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            toggle:borderWidth="2dp"
            toggle:offBorderColor="#000"
            toggle:offColor="#ddd"
            toggle:onColor="#f00"
            toggle:spotColor="#00f" />
    </LinearLayout>

    <com.runtai.togglebuttonlibrary.zcw.togglebutton.ToggleButton
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp" />

    <com.runtai.togglebuttonlibrary.zcw.togglebutton.ToggleButton
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp" />

    <com.runtai.togglebuttonlibrary.zcw.togglebutton.ToggleButton
        android:layout_width="54dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        toggle:isDefaultOn="true" />

</LinearLayout>
